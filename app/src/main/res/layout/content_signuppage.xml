<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".signuppage"
    android:background="@drawable/appbackground"
    android:orientation="vertical"
    >
    <TextView
        android:id="@+id/SignIn"
        android:layout_width="215dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:text="Sign In"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="40sp"
        android:textStyle="bold"
        android:typeface="sans" />


    <EditText
        android:id="@+id/SiUsername"
        android:layout_width="231dp"
        android:layout_gravity="center"
        android:layout_height="39dp"
        android:layout_below="@+id/SignIn"

        android:layout_marginTop="68dp"

        android:background="@drawable/signin_pagebutton"
        android:hint=" Username"
        android:textSize="24sp"
        android:typeface="sans" />


    <EditText
        android:id="@+id/SiPassowrd"
        android:layout_width="231dp"
        android:layout_height="39dp"
        android:layout_gravity="center"
        android:layout_below="@+id/SiUsername"
        android:layout_alignParentStart="true"
        android:inputType="textPassword"
        android:layout_marginTop="41dp"

        android:background="@drawable/signin_pagebutton"
        android:hint=" Password"
        android:textSize="24sp"
        android:typeface="sans" />
    <CheckBox
        android:id="@+id/SignInShowPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:layout_gravity="center"
        android:text="Show Password" />


    <EditText
        android:id="@+id/SiPhoneNumber"
        android:layout_width="231dp"
        android:layout_gravity="center"
        android:layout_height="39dp"
        android:layout_below="@+id/SiPassowrd"

        android:layout_marginTop="25dp"
        android:background="@drawable/signin_pagebutton"
        android:hint=" Phone Number"
        android:textSize="24sp"
        android:typeface="sans" />

    <EditText
        android:id="@+id/SiType"
        android:layout_width="231dp"
        android:layout_height="39dp"
        android:layout_gravity="center"

        android:layout_marginTop="41dp"

        android:background="@drawable/signin_pagebutton"
        android:hint="Volunteer / Blind"
        android:textSize="24sp"
        android:typeface="sans" />

    <EditText
        android:id="@+id/SiEmail"
        android:layout_width="231dp"
        android:layout_height="39dp"
        android:layout_gravity="center"
        android:layout_below="@+id/SiPhoneNumber"
        android:layout_marginTop="41dp"
        android:background="@drawable/signin_pagebutton"
        android:hint=" E-Mail"
        android:textSize="24sp"
        android:typeface="sans" />

    <Button
        android:id="@+id/SiRegister"
        android:layout_width="231dp"
        android:layout_height="39dp"
        android:layout_alignParentStart="true"
        android:layout_gravity="center"
        android:layout_marginTop="91dp"
        android:background="@drawable/login_button"
        android:text="Register"
        android:textAlignment="center"
        android:textColor="#FDFDFE"
        android:textSize="24sp"
        android:typeface="sans" />

</LinearLayout>
